<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="Wi-Fi SD"
        android:inputType="text"
        android:key="local_path"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_path" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="local_gallery"
        android:title="@string/pref_title_gallery" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="local_resize"
        android:title="@string/pref_title_resize" />

    <EditTextPreference
        android:defaultValue="1024"
        android:dependency="local_resize"
        android:inputType="number"
        android:key="local_resize_maxhw"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_maxhw" />

